{% extends 'MorozBlogBundle::baseBlogTemplate.html.twig' %}
{% block title %}{{ post.title }} - Блог{% endblock %}
{% block body %}
        <h2>{{ post.title }}</h2>
        <p>{% trans %}Автор:{% endtrans %} {{ post.author }} | {% trans %}Створено:{% endtrans %} {{post.postedDate|date("d-m-Y")}} | {% trans %}Переглядів:{% endtrans %} {{ post.counter }} | <a href="{{ path('blog_post_edit',{postId:post.id}) }}">{% trans %}Редагувати{% endtrans %}</a> | <a href="{{ path('blog_post_del',{postId:post.id}) }}">{% trans %}Видалити{% endtrans %}</a></p>
        <p>{{ post.content }}</p>
        <h4>{% trans %}Коментарі:{% endtrans %}</h4>
        {% for comment in comments %}
            {% include 'MorozBlogBundle:Comment:comments.html.twig' with {'comment': comment} %}
        {% endfor %}
        {% include 'MorozBlogBundle:Comment:newComment.html.twig'with {'post_id': post.id}%}
{% endblock %}
