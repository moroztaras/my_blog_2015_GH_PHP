{% extends 'MorozBlogBundle::baseBlogTemplate.html.twig' %}
{% block title %}Редагування поста{% endblock %}
{% block body %}
    <form action="{{ path('blog_post_edit',{postId:post.id})}}" method="post" >
        {{ form_errors(form) }}
        <table>
            <tr>
                <td colspan="2" align="center"><strong>Редагування поста</strong></td>
            </tr>
            <tr>
                <td>{{ form_label(form.title, 'Заголовок:') }}</td><td>{{ form_widget(form.title) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.postedDate, 'Дата:') }}</td><td>{{ form_widget(form.postedDate)}}</td>
            <tr>
            <tr>
                <td>{{ form_label(form.author, 'Автор:') }}</td><td>{{ form_widget(form.author) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.content, 'Текст:') }}</td><td>{{ form_widget(form.content) }}</td>
            <tr>
                <td colspan="2" align="center"><input type="submit" value="Обновити пост"></td>
            </tr>
        </table>
        {{ form_rest(form) }}
    </form>
{% endblock %}
